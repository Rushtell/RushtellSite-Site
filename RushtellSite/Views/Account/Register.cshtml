@model RushtellSite.ViewModels.RegisterModel

<section class="secRAL">
    <div class="RegAndLog">

        <h2>Регистрация</h2>

        <form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
            <div class="validation" asp-validation-summary="ModelOnly"></div>
            <div>
                <div>
                    <label asp-for="Email">Введите Email</label><br />
                    <input class="input-mod" type="text" asp-for="Email" />
                    <span asp-validation-for="Email" />
                </div>
                <div>
                    <label asp-for="Password">Введите пароль</label><br />
                    <input class="input-mod" asp-for="Password" />
                    <span asp-validation-for="Password" />
                </div>
                <div>
                    <label asp-for="ConfirmPassword">Повторите пароль</label><br />
                    <input class="input-mod" asp-for="ConfirmPassword" />
                    <span asp-validation-for="ConfirmPassword" />
                </div>
                <div>
                    <input class="standart-light-button" type="submit" value="Регистрация" />
                </div>
            </div>
        </form>
    </div>
</section>

